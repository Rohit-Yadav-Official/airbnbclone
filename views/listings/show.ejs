<% layout("/layouts/boilerplate") -%>
<body>
   <h2>listing detail of:<%=listing.title%></h2>
   <ul>
    <li><img src="<%=listing.image%>" alt="" id="showimg" ></li>
    <li>
        <%=listing.title%>
    </li>
    <li> <%=listing.description%></li>
    <li> 	&#8377; <%= listing.price.toLocaleString("en-IN")%></li>
    <li> <%= listing.country%></li>
    <li><%=listing.location%></li>
   </ul>
   <a href="/listing/<%= listing._id%>/edit">edit this listing</a>
   <br><br>
   <form action="/listing/<%=listing._id%>?_method=delete" method="post" 
    
   > <button>delete this list</button></form>
  <br><br>
   <hr>
   <br><br>
  <div>
    <h4>leave the rating</h4>
    <div>
    <form action="/listing/<%=listing._id%>/review" method="post">
        <div>

        
        <label for="range">Rating</label>
        <input type="range" min="1" max="5" id="range" name="review[rating]">

           </div>

           <div>
            <label for="comment">Comment</label>
            <input type="text" id="comment" name="review[comment]">
           </div>
           <button>submit</button>
         </form>
   <hr>
   <h4>ALL Review</h4>
   <ul>
   <% for(review of listing.review ){%>
    <% console.log(review); %>
    <li> <%= review.comment %>,<%= review.rating%> stars </li>
    <% } %>
   </ul>
   

    </div>

  

  </div>
   
</body>
